{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun --env-file=.env run apps/api/src/server.ts",
        "cwd": "."
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/server.ts",
        "tsConfig": "apps/api/tsconfig.json",
        "bundle": true,
        "platform": "node",
        "target": "node18",
        "external": ["hono"]
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t registry.digitalocean.com/admin-api-registry-v1/admin-api:latest -f apps/api/Dockerfile .",
        "cwd": "."
      }
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push registry.digitalocean.com/admin-api-registry-v1/admin-api:latest",
        "cwd": "."
      }
    },
    "docker-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run api:docker-build && nx run api:docker-push",
        "cwd": "."
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run --rm -d -p 3100:3100 --env-file .env --name api-container registry.digitalocean.com/admin-api-registry-v1/admin-api:latest",
        "cwd": "."
      }
    },
    "docker-stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker stop api-container && docker rm api-container",
        "cwd": "."
      }
    }
  },
  "tags": ["type:api", "scope:server"]
}
