{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    // "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@admin-dashboard-nx-monorepo/models": ["libs/models/src/index.ts"],
      "@app-info": ["libs/app-info/src/index.ts"],
      "@core/*": ["apps/admin-dashboard/src/app/core/*"],
      "@environments/*": ["apps/admin-dashboard/src/environments/*"],
      "@features/*": ["apps/admin-dashboard/src/app/features/*"],
      "@layouts/*": ["apps/admin-dashboard/src/app/layouts/*"],
      "@models": ["libs/models/src/index.ts"],
      "@shared/*": ["apps/admin-dashboard/src/app/shared/*"],
      "@assets/*": ["apps/admin-dashboard/src/assets/*"],
      "@test/*": ["apps/admin-dashboard/src/test/*"],
      "@mocks/*": ["apps/admin-dashboard/src/mocks/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["tmp"]
}
