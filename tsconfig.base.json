{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@core/admin-dashboard": ["apps/admin-dashboard/src/app/core/*"],
      "@shared/admin-dashboard": ["apps/admin-dashboard/src/app/shared/*"],
      "@layouts/admin-dashboard": ["apps/admin-dashboard/src/app/layouts/*"],
      "@features/admin-dashboard": ["apps/admin-dashboard/src/app/features/*"],
      "@environments/admin-dashboard": ["apps/admin-dashboard/src/app/environments/*"]
    },
  },
  "exclude": ["tmp"]
}

